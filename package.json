{
  "name": "fastify-auth-starter",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "start": "node dist/index.js",
    "start:prod": "NODE_ENV=production node dist/index.js",
    "build": "tsc",
    "migrate": "knex migrate:latest --env development",
    "migrate:reset": "knex migrate:rollback --all --env development && knex migrate:latest --env development",
    "migrate:prod": "knex migrate:latest --env production"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@fastify/jwt": "^9.1.0",
    "@fastify/rate-limit": "^10.2.2",
    "bcrypt": "^5.1.1",
    "dotenv": "^16.5.0",
    "fastify": "^5.3.2",
    "fastify-plugin": "^5.0.1",
    "knex": "^3.1.0",
    "pg": "^8.15.6"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/node": "^22.15.3",
    "@types/pg": "^8.11.14",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.3"
  }
}
